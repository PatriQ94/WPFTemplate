<Application x:Class="WPF.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPF.UI">
    <Application.Resources>
        <ResourceDictionary>
            <vm:ViewModelLocator xmlns:vm="clr-namespace:WPF.UI.Locators" x:Key="Locator" />
            <vm:HomePanelLocator xmlns:vm="clr-namespace:WPF.UI.Locators" x:Key="HomePanelLocator" />

            <Style TargetType="Window">
                <Setter Property="FontSize" Value="28" />
                <Setter Property="FontFamily" Value="Segoe UI Light" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
